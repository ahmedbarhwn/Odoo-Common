<odoo>
    <record id="view_export_custom_modules_wizard_form" model="ir.ui.view">
        <field name="name">export.custom.modules.wizard.form</field>
        <field name="model">export.custom.modules.wizard</field>
        <field name="arch" type="xml">
            <form string="Export Custom Modules" create="false" edit="false">
                <group>
                    <button name="action_download_zip" string="Generate and Download" type="object" class="btn-primary" />
                    <field name="file_name" readonly="1" />
                    <field name="file_data" filename="file_name" />
                </group>
            </form>
        </field>
    </record>

    <record id="action_export_custom_modules_wizard" model="ir.actions.act_window">
        <field name="name">Export Custom Modules</field>
        <field name="res_model">export.custom.modules.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_export_custom_modules_root" name="Custom Modules" />

    <menuitem id="menu_export_custom_modules_action" name="Export Modules" parent="menu_export_custom_modules_root" action="action_export_custom_modules_wizard" />
</odoo>
